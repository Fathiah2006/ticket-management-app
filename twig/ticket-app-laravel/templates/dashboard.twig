{% extends "layout.twig" %}
{% block content %}
<div class="page-wrapper dashboard-bg">
  <div class="container">
    <header class="header-dashboard">
      <div>
        <h1 class="logo">TicketFlow</h1>
        <p class="user-welcome">Welcome, {{ user.name }}</p>
      </div>
      <a href="/logout" class="btn btn-logout">Logout</a>
    </header>

    <div class="stats-grid">
      <div class="stat-card"><div class="stat-icon stat-icon-blue">{{ tickets|length }}</div><h3 class="stat-label">Total Tickets</h3></div>
      <div class="stat-card"><div class="stat-icon stat-icon-green">{{ tickets|filter(t => t.status == 'open')|length }}</div><h3 class="stat-label">Open</h3></div>
      <div class="stat-card"><div class="stat-icon stat-icon-amber">{{ tickets|filter(t => t.status == 'in_progress')|length }}</div><h3 class="stat-label">In Progress</h3></div>
      <div class="stat-card"><div class="stat-icon stat-icon-gray">{{ tickets|filter(t => t.status == 'closed')|length }}</div><h3 class="stat-label">Closed</h3></div>
    </div>

    <div class="quick-actions">
      <h2>Quick Actions</h2>
      <a href="/tickets" class="btn btn-primary">Manage Tickets</a>
    </div>
  </div>
</div>
{% endblock %}
